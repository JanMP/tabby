template(name="songs")
  .container
    h1.page-header songs
      if loggedIn
        button.btn.btn-default.new-song-button.pull-right new song
    if newSong
      +newSongEdit
    each songs
      +songDisplay

template(name="songDisplay")
  .card-panel
    .card-content
      if mayEdit
        +songDeleteButton
        +songEditButton
      +songPlayButton
      h3 #{title}

template(name="songPlayButton")
  span
    i.fa.fa-lg.fa-fw.fa-play.icon-button.play-button.pull-right

template(name="songEditButton")
  span
    i.fa.fa-lg.fa-fw.fa-edit.icon-button.edit-button.pull-right
    
template(name="songDeleteButton")
  span
    i.fa.fa-lg.fa-fw.fa-trash.icon-button.delete-button.pull-right